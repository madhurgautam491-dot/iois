    <script>
        // Activate PRO
        function activatePro() {
            // Save PRO status in localStorage
            localStorage.setItem('zozo_pro', 'true');
            localStorage.setItem('zozo_pro_expiry', Date.now() + (30 * 24 * 60 * 60 * 1000)); // 30 days
            
            // Show success message
            alert('ðŸŽ‰ Thank you! Your PRO access will be activated within 5 minutes after verification.');
            
            // Redirect to chat
            setTimeout(() => {
                window.location.href = 'chat.html?pro=true';
            }, 1000);
        }
        
        // Auto-check if PRO already activated
        window.onload = function() {
            const isPro = localStorage.getItem('zozo_pro') === 'true';
            const expiry = localStorage.getItem('zozo_pro_expiry');
            
            if (isPro && expiry && Date.now() < parseInt(expiry)) {
                alert('âœ… You already have PRO access! Redirecting to chat...');
                window.location.href = 'chat.html?pro=true';
            }
        };
    </script>
